{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for gh-trs configuration file",
  "type": "object",
  "properties": {
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "language_type": {
            "type": "string"
          },
          "attachments": {
            "type": "object",
            "properties": {
              "target": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
            },
            "required": ["url"],
            "additionalProperties": false
          },
          "testing": {
            "type": "object",
            "properties": {
              "attachments": {
                "type": "object",
                "properties": {
                  "target": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string"
                  }
                },
                "required": ["url"],
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "required": ["url", "language_type"],
        "additionalProperties": false
      },
      "additionalItems": false
    }
  },
  "required": ["tools"],
  "additionalProperties": false
}
